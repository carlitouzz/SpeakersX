<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SpeakersX.View.DetailsPage">
	<ScrollView Padding="10">
    <StackLayout Spacing="10">
            <Button Text="Back" Clicked="goBack" WidthRequest="50" HeightRequest="50"/>
            <Image Source="{Binding Avatar}" HeightRequest="200" WidthRequest="200"></Image>
            <Label Text="{Binding Name}" FontSize="24"/>
            <Label Text="{Binding Title}" TextColor="Purple"/>
            <Label Text="{Binding Description}"/><Label Text="{Binding Name}" FontSize="24"/>
            <Button Text="Go to Website" x:Name="ButtonWebsite"/>
    </StackLayout>    
    </ScrollView>
</ContentPage>
